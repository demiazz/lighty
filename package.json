{
  "name": "lighty",
  "version": "0.5.0",
  "description": "The tiny engine for your handy microframework",
  "license": "MIT",
  "homepage": "https://github.com/demiazz/lighty",
  "bugs": {
    "url": "https://github.com/demiazz/lighty/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demiazz/lighty"
  },
  "author": {
    "name": "Alexey Plutalov",
    "email": "demiazz.py@gmail.com"
  },
  "main": "dist/lighty.js",
  "module": "dist/lighty.es.js",
  "jsnext:main": "dist/lighty.es.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "$(npm bin)/eslint build src spec",
    "pretest": "npm run lint",
    "test": "cross-env NODE_ENV=test $(npm bin)/karma start build/karma.local.js --single-run",
    "test:watch": "cross-env NODE_ENV=test $(npm bin)/karma start build/karma.local.js",
    "test:ci": "cross-env NODE_ENV=test $(npm bin)/karma start build/karma.ci.js",
    "build:dist": "node build/rollup.js",
    "build:docs": "node build/docs.js",
    "build": "npm run build:dist && npm run build:docs",
    "version": "npm run build && git add -A dist && git add -A README.md"
  },
  "devDependencies": {
    "cross-env": "^3.1.3",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "jasmine-core": "^2.5.2",
    "jsdoc-to-markdown": "^2.0.1",
    "karma": "^1.3.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-rollup-plugin": "^0.2.4",
    "karma-sauce-launcher": "^1.1.0",
    "karma-spec-reporter": "0.0.26",
    "phantomjs-prebuilt": "^2.1.13",
    "rollup": "^0.37.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^6.0.0",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "uglify-save-license": "^0.4.1"
  }
}
