{
  "name": "lighty",
  "version": "0.9.0",
  "description": "The tiny engine for your handy microframework",
  "license": "MIT",
  "homepage": "https://github.com/demiazz/lighty",
  "bugs": {
    "url": "https://github.com/demiazz/lighty/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/demiazz/lighty"
  },
  "author": {
    "name": "Alexey Plutalov",
    "email": "demiazz.py@gmail.com"
  },
  "main": "lib/index.js",
  "typings": "d.ts/homey.d.ts",
  "files": [
    "d.ts/lighty.d.ts",
    "dist/lighty.js",
    "dist/lighty.min.js",
    "dist/lighty.min.js.map",
    "lib/*.js",
    "lib/*.js.flow",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "check": "$(yarn bin)/flow --show-all-errors src",
    "pretest": "yarn run check",
    "test": "cross-env NODE_ENV=test $(yarn bin)/karma start build/karma/local.js --single-run",
    "test:watch": "cross-env NODE_ENV=test $(yarn bin)/karma start build/karma/local.js",
    "test:ci": "cross-env NODE_ENV=test $(yarn bin)/karma start build/karma/ci.js",
    "build": "node build/bundle/index.js",
    "docs": "node build/docs.js",
    "version": "yarn run build && yarn run docs && git add -A README.md",
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "{build,spec,src}/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "chalk": "^2.0.1",
    "cross-env": "^5.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.51.0",
    "jasmine-core": "^2.6.4",
    "jsdoc-to-markdown": "^3.0.0",
    "karma": "^1.7.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-rollup-plugin": "^0.2.4",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.31",
    "lint-staged": "^4.0.2",
    "mkdirp": "^0.5.1",
    "phantomjs-prebuilt": "^2.1.13",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-save-license": "^0.4.1"
  }
}
